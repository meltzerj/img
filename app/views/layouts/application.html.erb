                <div id="header-links">
                    <%= link_to "Projects", "", :id => "projects-link" %> |
                    <%= link_to "What is IMG?", pages_what_is_img_path %> |
                    <%= link_to "Schedule", pages_schedule_path %> |
                    <%= link_to "Contact", pages_contact_path %>   
                </div>      
            </div> 
        </div> 
        <div id="main">  
            <%= yield %>
        </div>     
        <div id="footer">
            <div id="footer-container">
                <div style="color:white;float:right;margin-top:20px;">Interactive Media Group Â© 2011</div>
                <div style="float:left;margin-top:20px;">
                    <a href=""><span id="facebook"></span></a>
                    <a href=""><span id="twitter"></span></a>
                </div>    
            </div>
        </div>
    </div>

</body>

</html>
